<div class="starter-template">
  <div class="jumbotron">
    <h2>FastCache MRTG AND NG</h2>
    <div class="row">
      <div class="small-4 large-4 columns">
        <%= form_tag("/auth/login", method: "post") do %>
          <%= label_tag(:name, "帐号:") %>
          <%= text_field_tag(:name) %>
          <%= label_tag(:passwd, "密码:") %>
          <%= password_field_tag(:passwd) %>
          <%= submit_tag("登入") %>
        <% end %>
        <div style="position: relative;top: 5px;">
          <a href="<%= ENV["boss_sso_url"] %>">Boss SSO登入</a>
        </div>
      </div>
      <div class="small-4 large-4 columns" id="notice-block">
        <% if flash[:error] %>
          <p class="alert alert-danger" id="error"><%= flash[:error] %></p>
        <% elsif flash[:notice] %>
          <p class="alert alert-success" id="notice"><%= flash[:notice] %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
